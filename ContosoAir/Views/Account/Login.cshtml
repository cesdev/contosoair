@model Login
@{
    ViewData["Title"] = "Privacy Policy";
}
    <section class="block-search">
        <div class="container">
            <div class="row block-search-row">
                <div class="block-search-row-logo">
                    <span class="icon icon-logo"></span>
                </div>
                <div class="col-12 col-md-5 col-lg-7 align-self-center block-search-right"></div>
                <div class="col-12 col-md-7 col-lg-5">
                    <div class="block-search-form box">
                        <h2 class="block-search-form-title">Login:</h2>
                        <form method="POST">
                            <fieldset>
                                <div class="form-group">
                                    <label for="username">Nombre de usuario</label>
                                    <input asp-for="@Model.UserName" type="text" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label for="password">Contraseña</label>
                                    <input asp-for="@Model.Password" type="password" class="form-control">
                                </div>

                                <button class="btn btn-md btn-primary block-search-form-button" type="submit">Log in</button>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>